<div class="card">
	<div id="webcamstreamer_wrapper">
		<img data-bind="attr: {src: embed_url}" style=" width:100%; height: auto; border: none"></img>
	</div>
    <div class="card-header">
        <b>cExt:Engraver</b>        
    </div>
    <div class="card-body"> 
    	<label>File: <span id="id_file_selected"></span></label>
        <button class="btn btn-primary" type="button" data-bind="enable: is_file_selected, click: engrave">Analysis</button> <span id="id_file_analisys"> </span>
    	<div class="w-100"></div> 
    	<span id=id_cext_state></span>
    	<label class="checkbox"><input type="checkbox"data-bind="checked: swap_xy" >swap_xy</label>    	
        <label>grid_area: <span  data-bind="text:grid_area "></span>mm</label>
        <button class="btn btn-warning" type="button" data-bind="enable: is_file_selected, click: probe_area" style="width:40%">Probe Area</button>
    	<button class="btn btn-primary" type="button" data-bind="enable: is_engrave_avaliable, click: engrave" style="width:40%">Engrave</button>
        <button class="btn btn-secondary btn-block" data-bind="click: probe_area_stop">Cancel/Stop</button>
    	<hr>        
        <button class="btn btn-dark btn-block" type="button" data-bind="enable: isOperational(),click: function() { OctoPrint.control.sendGcode(cmd_SetPosition000); }">Set (0)</button>
    	<button class="btn btn-primary btn-block" data-bind="enable: isOperational(), click: function() { OctoPrint.control.sendGcode(cmd_DisableSteppers); }" >Motors Off</button>
        <button class="btn btn-info" type="button" data-bind="enable: isOperational() && is_file_selected, click: function() {relative_move_xy(-file_selected_width_grid(),0);}">GotoX -width</button>
        <button class="btn btn-info" type="button" data-bind="enable: isOperational() && is_file_selected, click: function() {relative_move_xy( file_selected_width_grid(),0);}">GotoX +width</button>
        <button class="btn btn-info" type="button" data-bind="enable: isOperational() && is_file_selected, click: function() {relative_move_xy(0,-file_selected_depth_grid());}">GotoY -depth</button>
        <button class="btn btn-info" type="button" data-bind="enable: isOperational() && is_file_selected, click: function() {relative_move_xy(0, file_selected_depth_grid());}">GotoY +depth</button>
        <div class="w-100"></div> 
        <button class="btn btn-warning btn-block" data-bind="click: function() { z_hop(z_travel());absolute_move_xy(0,0); probe(z_travel(),speed_probe_fast());}" >Goto XY(0)</button>
        <hr>  
        <button class="btn btn-warning col-sm" type="button" data-bind="click: function() {probe_threshold(z_travel(),speed_probe_fast());}">Probe</button>
        <button class="btn btn-warning col-sm" type="button" data-bind="click: function() {z_hop(z_travel());}">z_hop</button>
        <div class="w-100"></div> 
        <input type="number" id="id_z_tool_change" min="1" data-bind="value:z_tool_change()">
        <button class="btn btn-info col-sm" type="button" data-bind="click: function() {probe_threshold($('#id_z_tool_change').val(),speed_probe_fast());}">ToolChange_Probe</button>
        <button class="btn btn-info col-sm" type="button" data-bind="click: function() {z_hop($('#id_z_tool_change').val());}">ToolChange_z_hop</button>
    </div>
</div>
